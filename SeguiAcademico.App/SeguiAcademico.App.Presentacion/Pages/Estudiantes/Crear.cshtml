@page
@using SeguiAcademico.App.Dominio
@model SeguiAcademico.App.Presentacion.Pages.Estudiantes.CrearModel
@{
}
<h1>Creación de nuevo estudiante</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="estudiante.Nombre"></label>
        <input asp-for="estudiante.Nombre" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Apellidos"></label>
        <input asp-for="estudiante.Apellidos" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.NumeroTelefono">Número de telefono</label>
        <input asp-for="estudiante.NumeroTelefono" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Genero"></label>
        <select asp-for="estudiante.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Curso"></label>
        <input asp-for="estudiante.Curso" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Direccion"></label>
        <input asp-for="estudiante.Direccion" class="form-control" required="requerided">
    </div>
    @* <div class="form-group">
        <label asp-for="estudiante.Latitud"></label>
        <input asp-for="estudiante.Latitud" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Longitud"></label>
        <input asp-for="estudiante.Longitud" class="form-control">
    </div> *@
    <div class="form-group">
        <label asp-for="estudiante.Ciudad"></label>
        <input asp-for="estudiante.Ciudad" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.FechaNacimiento">Fecha de nacimiento</label>
        <input asp-for="estudiante.FechaNacimiento" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.MateriasInscritas">Materias inscritas</label>
        <input asp-for="estudiante.MateriasInscritas" class="form-control" required="requerided">
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>

</form>
