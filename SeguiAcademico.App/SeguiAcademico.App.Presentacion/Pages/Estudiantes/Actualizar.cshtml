@page
@using SeguiAcademico.App.Dominio
@model SeguiAcademico.App.Presentacion.Pages.Estudiantes.ActualizarModel
@{
}
<h1>Menú actualización información de los estudiantes</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="estudiante.Id"></label>
        <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Nombre"></label>
        <input asp-for="estudiante.Nombre" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Genero"></label>
        <select asp-for="estudiante.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary" asp-page="./Index">Actualizar</button>

</form> 