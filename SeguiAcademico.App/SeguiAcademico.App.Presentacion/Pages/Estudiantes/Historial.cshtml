@page
@model SeguiAcademico.App.Presentacion.Pages.Estudiantes.HistorialModel
@using SeguiAcademico.App.Dominio
@{
}
<h1>Creación historial estudiantes</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="estudiante.Id"></label>
        <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Nombre"></label>
        <input asp-for="estudiante.Nombre" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Apellidos"></label>
        <input asp-for="estudiante.Apellidos" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="historiales.Observaciones"></label>
        <input asp-for="historiales.Observaciones" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="recomendacion.FechaPublicacion">Fecha publicación</label>
        <input asp-for="recomendacion.FechaPublicacion" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="recomendacion.FechaEntrega">Fecha entrega</label>
        <input asp-for="recomendacion.FechaEntrega" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="recomendacion.Materia"></label>
        <input asp-for="recomendacion.Materia" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="recomendacion.Tematica">Temática</label>
        <input asp-for="recomendacion.Tematica" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="recomendacion.FechaPublicacion">Fecha creación</label>
        <input asp-for="recomendacion.FechaPublicacion" class="form-control" required="requerided">
    </div>
    
    <div class="form-group">
        <label asp-for="recomendacion.TipoActividad">Tipo de actividad</label>
        <select asp-for="recomendacion.TipoActividad" asp-items="Html.GetEnumSelectList<TipoActividad>()" class="form-control" required="requerided"></select>
    </div>
    <div class="form-group">
        <label asp-for="recomendacion.EstadoAvance">Tipo de actividad</label>
        <select asp-for="recomendacion.EstadoAvance" asp-items="Html.GetEnumSelectList<EstadoAvance>()" class="form-control" required="requerided"></select>
    </div>
    

    <button type="submit" class="btn btn-primary">Registrar</button>

</form>
