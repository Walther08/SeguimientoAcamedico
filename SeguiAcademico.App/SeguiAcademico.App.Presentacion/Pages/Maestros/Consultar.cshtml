@page
@model SeguiAcademico.App.Presentacion.Pages.Maestros.ConsultarModel
@{
}

<body class="interfaz-maestro">
    <h1>Lista de los maestros actuales</h1> <br>

    <a class="btn btn-primary" asp-page="./Crear">NUEVO MAESTRO</a> <br>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Número de telefono</th>
                <th scope="col">Genero</th>
                <th scope="col">Correo Institucional</th>
                <th scope="col">Materia</th>
                <th scope="col">Curso a cargo</th>
                <th scope="col">Actualizar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>

        @foreach (var i in Model.maestro)
        {
            <tr>
                <td>@i.Nombre</td>
                <td>@i.Apellidos</td>
                <td>@i.NumeroTelefono</td>
                <td>@i.Genero</td>
                <td>@i.CorreoInstitucional</td>
                <td>@i.Materia</td>
                <td>@i.CursoACargo</td>
                <td><a class="btn btn-secondary" asp-page="./Actualizar" asp-route-id="@i.Id"><svg
                        xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path
                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>&nbsp;EDITAR</a></td>
                <td><a class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@i.Id"><svg
                        xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x"
                        viewBox="0 0 16 16">
                            <path
                            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg></a></td>
            </tr>
        }

    </table>
</body>
