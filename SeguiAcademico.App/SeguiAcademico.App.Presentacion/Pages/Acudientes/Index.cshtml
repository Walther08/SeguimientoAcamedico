@page
@model SeguiAcademico.App.Presentacion.Pages.Acudientes.IndexModel
@{
}
<h1>Lista de los acudientes actuales</h1> <br>

<a class="btn btn-primary" asp-page="./Crear">+Nuevo Acudiente</a> <br>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Número de telefono</th>
            <th scope="col">Genero</th>
            <th scope="col">Parentesco</th>
            <th scope="col">Correo electrónico</th>
            <th scope="col">Actualizar</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>

    @foreach (var i in Model.acudienteDesignado)
    {
        <tr>
            <td>@i.Nombre</td>
            <td>@i.Apellidos</td>
            <td>@i.NumeroTelefono</td>
            <td>@i.Genero</td>
            <td>@i.Parentesco</td>
            <td>@i.CorreoElectronico</td>
            <td><a class="btn btn-secondary" asp-page="./Actualizar" asp-route-id="@i.Id">Editar</a></td>
            <td><a class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@i.Id">Borrar</a></td>
        </tr>  
    
    }
</table>